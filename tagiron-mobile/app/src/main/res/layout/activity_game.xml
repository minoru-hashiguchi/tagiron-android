<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.util.List" />

        <import type="com.icloud.hashiguchi.minoru.tagiron.constants.Color" />

        <import type="com.icloud.hashiguchi.minoru.tagiron.Tile" />

        <variable
            name="viewmodel"
            type="com.icloud.hashiguchi.minoru.mobile.data.GameLiveDataViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        tools:context="com.icloud.hashiguchi.minoru.mobile.ui.activities.GameActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewOwnTilesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/own_tiles_label"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/linearLayoutOwnTiles"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayoutOwnTiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/textViewFieldQuestionCardsLabel"
                app:layout_constraintTop_toBottomOf="@id/textViewOwnTilesLabel">

                <include
                    layout="@layout/tiles_layout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tileList="@{viewmodel.ownTiles}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutYourTileButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:allowClickWhenDisabled="false"
                    android:enabled="@{!viewmodel.showQuestionSelector}"
                    android:onClick="@{viewmodel::onClickSelectQestion}"
                    android:text="質問する" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:allowClickWhenDisabled="false"
                    android:enabled="@{!viewmodel.showCallEditor}"
                    android:onClick="@{viewmodel::onClickSelectCall}"
                    android:text="@string/call_button" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewFieldQuestionCardsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/field_question_cards_label"
                android:textColor="@color/black"
                android:visibility="@{viewmodel.showQuestionSelector ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewQuestions"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutOwnTiles" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuestions"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:visibility="@{viewmodel.showQuestionSelector ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutPlayersLabel"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewQuestions" />


            <TextView
                android:id="@+id/textViewYourTilesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="@string/your_tiles_label"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutYourTileButtons"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutBothPlayersQuestion" />

            <LinearLayout
                android:id="@+id/linearLayoutYourTiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <include
                    layout="@layout/tiles_layout"
                    app:tileList="@{viewmodel.thinkingTiles}"
                    app:viewmodel="@{viewmodel}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{viewmodel.showCallEditor ? View.VISIBLE : View.GONE}">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:text="クリア" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:text="赤"
                    android:textColor="@color/tile_color_red" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:text="青"
                    android:textColor="@color/tile_color_blue" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:text="黄"
                    android:textColor="@color/tile_color_yellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{viewmodel.showCallEditor ? View.VISIBLE : View.GONE}">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(0)}"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(1)}"
                    android:text="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(2)}"
                    android:text="2" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(3)}"
                    android:text="3" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(4)}"
                    android:text="4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{viewmodel.showCallEditor ? View.VISIBLE : View.GONE}">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(5)}"
                    android:text="5" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(6)}"
                    android:text="6" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(7)}"
                    android:text="7" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(8)}"
                    android:text="8" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.onClickNumber(9)}"
                    android:text="9" />
            </LinearLayout>

        </LinearLayout>

        <!-- 下から引っ張り出すView (BottomSheet) -->
        <LinearLayout
            android:id="@+id/bottomSheetLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tile_color_yellow"
            android:orientation="vertical"
            app:behavior_hideable="false"
            app:behavior_peekHeight="300dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <!-- BottomSheetに表示したいViewを設定する -->

            <LinearLayout
                android:id="@+id/linearLayoutPlayersLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutBothPlayersQuestion"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewQuestions">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/first_move"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/human_player"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/last_atack"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/computer_player"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutBothPlayersQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutPlayersLabel">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewQuestions1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewQuestions2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>