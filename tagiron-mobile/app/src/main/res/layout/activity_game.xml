<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List" />

        <import type="com.icloud.hashiguchi.minoru.tagiron.constants.Color" />

        <import type="com.icloud.hashiguchi.minoru.tagiron.Tile" />

        <variable
            name="viewmodel"
            type="com.icloud.hashiguchi.minoru.mobile.data.GameLiveDataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        tools:context="com.icloud.hashiguchi.minoru.mobile.ui.activities.GameActivity">

        <TextView
            android:id="@+id/textViewOwnTilesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/own_tiles_label"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutOwnTiles"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayoutOwnTiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/textViewFieldQuestionCardsLabel"
            app:layout_constraintTop_toBottomOf="@id/textViewOwnTilesLabel">

            <include
                layout="@layout/tiles_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutYourTileButtons"
                app:viewmodel="@{viewmodel.ownTiles}" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFieldQuestionCardsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/field_question_cards_label"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewQuestions"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutOwnTiles" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewQuestions"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutPlayersLabel"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewQuestions" />

        <LinearLayout
            android:id="@+id/linearLayoutPlayersLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutBothPlayersQuestion"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewQuestions">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/first_move"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/human_player"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/last_atack"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/computer_player"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutBothPlayersQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@id/textViewYourTilesLabel"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutPlayersLabel">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuestions1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_weight="1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuestions2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewYourTilesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/your_tiles_label"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutYourTileButtons"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutBothPlayersQuestion" />

        <LinearLayout
            android:id="@+id/linearLayoutYourTileButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutYourTiles"
            app:layout_constraintTop_toBottomOf="@id/textViewYourTilesLabel">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="@string/edit_button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="@string/call_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutYourTiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutYourTileButtons">

            <include
                layout="@layout/tiles_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutYourTileButtons"
                app:viewmodel="@{viewmodel.thinkingTiles}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>