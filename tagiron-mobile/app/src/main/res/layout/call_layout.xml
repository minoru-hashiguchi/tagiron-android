<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.icloud.hashiguchi.minoru.tagiron.TileViewModel" />

        <import type="java.util.List" />

        <variable
            name="tileList"
            type="List&lt;TileViewModel>" />

        <variable
            name="viewmodel"
            type="com.icloud.hashiguchi.minoru.mobile.data.GameLiveDataViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <include
            layout="@layout/tiles_layout"
            app:tileList="@{viewmodel.computerCalledTiles}" />

        <TextView
            android:id="@+id/textViewCallResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@{viewmodel.isPlaying ? `不正解！！`:`あなたの負け！`}"
            android:textSize="40sp" />
    </LinearLayout>
</layout>