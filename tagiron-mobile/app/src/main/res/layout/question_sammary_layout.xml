<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPatternCount"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="@dimen/small_text_max_size"
            android:autoSizeMinTextSize="@dimen/commom_text_min_size"
            android:autoSizeTextType="uniform"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewAnswerText"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:autoSizeMaxTextSize="@dimen/small_text_max_size"
            android:autoSizeMinTextSize="@dimen/commom_text_min_size"
            android:autoSizeTextType="uniform"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/tile_color_red" />

        <TextView
            android:id="@+id/textViewQuestionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="@dimen/small_text_max_size"
            android:autoSizeMinTextSize="@dimen/commom_text_min_size"
            android:autoSizeTextType="uniform"
            android:background="@drawable/border"
            android:gravity="center_vertical|left"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearLayoutTiles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingVertical="1dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/tile_background"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewNo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/tile_background"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewNo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/tile_background"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewNo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/tile_background"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewNo4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/tile_background"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewNo5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

